<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ShopList.Gui.ViewModels"
             xmlns:model="clr-namespace:ShopList.Gui.Models"
             x:DataType="viewmodel:ShopListViewModel"
             x:Class="ShopList.Gui.Views.ShopListPage"
             Title="Lista de compras">
    <Grid
        RowDefinitions="Auto,*"
        Padding="8"
        RowSpacing="6">
        <Grid
            Grid.Row="0"
            Grid.Column="0"
            RowDefinitions="Auto,Auto"
            ColumnDefinitions="Auto,*,Auto,Auto"
            RowSpacing="4"
            ColumnSpacing="4">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="Producto"
                VerticalOptions="Center"
                FontSize="Medium"/>
            <Entry
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding NombreDelArticulo}"
                FontSize="Medium"
                BackgroundColor="#f0f0f0"/>
            <Label
                Grid.Row="1"
                Grid.Column="0"
                Text="Cantidad:"
                FontSize="Medium"
                VerticalOptions="Center"/>
            <Entry
                Grid.Row="1"
                Grid.Column="1"
                FontSize="Medium"
                Text="{Binding CantidadAComprar}"
                BackgroundColor="#f0f0f0"/>
            <Button
                 Grid.Row="0"
                FontSize="Medium"
                 Grid.Column="2"
                 Text="+"
                Command="{Binding AgregarShopListItemComand}"/>
            <Button
                Grid.Row="1"
                FontSize="Medium"
                Grid.Column="2"
                Text="X"/>
        </Grid>
        <CollectionView
            Grid.Row="1"
            Grid.Column="0"
            SelectionMode="Single"
            EmptyView="AÃºn no se han registrado productos" 
            BackgroundColor="#f0f0f0"
            ItemsSource="{Binding Items}">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Item">
                    <Border>
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5"/>
                        </Border.StrokeShape>
                        <Grid
                        ColumnDefinitions="Auto,*,Auto"
                        Padding="8,0"
                        >
                        <CheckBox
                            IsChecked="{Binding Comprado}"
                            />
                        <Label
                            Grid.Column="1"
                            Text="{Binding Nombre}"
                            VerticalOptions="Center"
                            />
                        <Label
                            Grid.Column="2"
                            Text="{Binding Cantidad}"
                            VerticalOptions="Center"
                            />

                    </Grid>
                        
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </Grid>

</ContentPage>